<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Passwort</th>
    <th>Nachname</th>
    <th>Vorname</th>
    <th>Email</th>
    <th>Rechte</th>
    <th colspan="3">Optionen</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.lastname %></td>
    <td><%= user.firstname %></td>
    <td><%= user.email %></td>
    <td><%= user.rights %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>      
  </tr>

<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
